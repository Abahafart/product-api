####
# This Dockerfile is used in order to build a container that runs the Quarkus application in native (no JVM) mode.
#
# Before building the container image run:
#
# ./gradlew build -Dquarkus.native.enabled=true
#
# Then, build the image with:
#
# docker build -f src/main/docker/Dockerfile.native -t quarkus/product-api .
#
# Then run the container using:
#
# docker run -i --rm -p 8080:8080 quarkus/product-api
#
# The ` registry.access.redhat.com/ubi9/ubi-minimal:9.6` base image is based on UBI 9.
# To use UBI 8, switch to `quay.io/ubi8/ubi-minimal:8.10`.
###
FROM registry.access.redhat.com/ubi9/ubi-minimal:9.6
WORKDIR /work/
RUN microdnf install -y nmap-ncat && \
    chown 1001 /work \
    && chmod "g+rwX" /work \
    && chown 1001:root /work
COPY --chown=1001:root --chmod=0755 build/*-runner /work/application
COPY --chown=1001:root --chmod=0755 wait-for-it.sh /work/wait-for-it.sh
EXPOSE 8080
USER 1001

ENTRYPOINT ["/work/wait-for-it.sh", "database", "5432", "./application", "-Dquarkus.http.host=0.0.0.0"]
